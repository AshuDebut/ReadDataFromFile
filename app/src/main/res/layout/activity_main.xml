<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/labelReadWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_blue"
        android:paddingVertical="@dimen/dimen_10"
        android:paddingHorizontal="@dimen/dimen_20"
        android:text="@string/start_reading_words"
        app:cornerRadius="@dimen/dimen_radious_12"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/labelNumberOfWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:textColor="@color/black"
        android:textSize="@dimen/text_22sp"
        android:text="@string/number_of_words_in_file"
        app:cornerRadius="@dimen/dimen_radious_5"
        app:layout_constraintEnd_toEndOf="@+id/labelReadWords"
        app:layout_constraintStart_toStartOf="@+id/labelReadWords"
        app:layout_constraintTop_toBottomOf="@+id/labelReadWords" />

    <TextView
        android:id="@+id/numberOfWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_18sp"
        app:cornerRadius="@dimen/dimen_radious_5"
        app:layout_constraintEnd_toEndOf="@+id/labelReadWords"
        app:layout_constraintStart_toStartOf="@+id/labelReadWords"
        app:layout_constraintTop_toBottomOf="@+id/labelNumberOfWords" />

</androidx.constraintlayout.widget.ConstraintLayout>